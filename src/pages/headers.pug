          var footerSupport = [
            { "value": "Documentation", "href": '#'},
            { "value": "Community", "href": '#'},
            { "value": "Get in Touch", "href": '#'}
          ]
<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Headers
        link(rel="stylesheet", href="main.scss")
    body
        main.ui-kit.ui-kit--dark
          +header(headerlinks, "true", "styles", "", "")
          +header(headerlinks, "false", "styles", "#", "Юлий Цезарь")
          +footer(footerNav, footerAbout, footerSupport, "styles")
          +copyright("styles")