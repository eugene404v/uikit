include ./_bulletlist.pug



mixin form-element(name, descr)
    div
        dl.forms__container
            dt.forms__name= name
            if descr
                dd.forms__descr= descr
        block

mixin text-field(name, placeholder, modifier)
    input(type="text", name=""+name, placeholder=""+placeholder, class="text-field "+modifier)

mixin checkbox(check, name, id, value)
    input.checkbox__input(type="checkbox", id=""+id, name=""+name, value=""+value)
    label(for=""+id).checkbox
        block
        

mixin radio(check, label, name, id, value)
    input.radio__input(type="radio", id=""+id, name=""+name, value=""+value)
    label(for=""+id).radio= label
    

mixin toggle(check, label, name, id, value)
    input.toggle__input(type="checkbox", id=""+id, name=""+name, value=""+value)
    label(for=""+id).toggle= label
    

mixin like(value, modifier)
    button(class="like "+modifier)= value

mixin btn(value, styles, id)
    button(class="btn "+styles, id=""+id)= value

mixin submit(value, styles, id)
    button(class="btn-submit "+styles, id=""+id)
        span.btn-submit__title= value

mixin pagination(styles)
    div(class="pagination "+styles)
        ul.pagination__list
            li.pagination__item
                a.pagination__link.pagination__link--active(href="#") 
                    span 1
            li.pagination__item
                a.pagination__link(href="#") 
                    span 2
            li.pagination__item
                a.pagination__link(href="#") 
                    span 3
            li.pagination__item.pagination__link
                p ...
            li.pagination__item
                a.pagination__link(href="#") 
                    span 15
            li.pagination__item
                a.pagination__link.pagination__link--last(href="#") 
        p.pagination__descr 1 – 12 из 100+ вариантов аренды
        
mixin subscribe(styles, placeholder, name, action)
    div(class="subscribe "+styles)    
        form(action=""+action)
            input.subscribe__input(type="text", name=""+name, placeholder=""+placeholder)
            input.subscribe__submit(type="submit", value="000")

mixin expandable(name, styles)
    div(class="expandable "+styles)
        h3.expandable__header= name
        ul.expandable__list
            block        

mixin feature(name, text, styles)
    div(class="feature "+styles)
        h4.feature__header= name
        p.feature__text= text

mixin comments(href, name, src, ago, likes, likemodifier, styles)
    section(class="comment "+styles)
        .comment__column
            a(href=""+href, title=""+name)
                img(src=""+src, alt=""+name).comment__photo
            +like(likes, likemodifier)
        .comment__column
            a(href=""+href, title=""+name).comment__name= name
            p= ago
            block

mixin dropdown(styles, placeholder)
    section(class="dropdown "+styles)
        input.dropdown__input(type="text", placeholder=""+placeholder, disabled) 
        .dropdown__content    
            block

mixin dropdown__item(name, count, minusmod)
    li.dropdown__item 
        p= name
        .dropdown__calc
            button(class="dropdown__counter dropdown__counter--minus "+minusmod) -
            p.dropdown__count= count
            button.dropdown__counter.dropdown__counter--plus +

mixin date-dropdown(name, day, styles)
    div(class="date-dropdown "+styles)
        h3.date-dropdown__header= name
        button.date-dropdown__btn= day

mixin login(action, styles)
    section(class="login "+styles)
        h1.login__header Войти
        form(action=""+action)
            +text-field("name", "Email", "login__email")
            +text-field("name", "Пароль", "login__password")
            +submit("войти", "login__submit", "")
            .login__footer
                p Нет аккаунта на Toxin? 
                +btn("создать", "btn-empty")

    

mixin booking(header, roomtype, price, arrivalday, leaveday, guests, allpricedays, allpricecount, costdescr, costcount, upsaledescr, upsalecount, info, fullprice)
    section.booking
        .booking__wrapper                    
            h6.booking__header= header
                span.booking__type= roomtype
            p.booking__price
                span.booking__price-count= price
                span.booking__price-day в сутки
        .booking__wrapper
            +date-dropdown("прибытие", arrivalday, "")
            +date-dropdown("выезд", leaveday, "")
        h3 гости
        +dropdown("dropdown--closed booking__guests", guests)
        .booking__wrapper.booking__wrapper--calc
            span.booking__allprice-days= allpricedays
            span.booking__allprice-count= allpricecount
        .booking__wrapper.booking__wrapper--calc
            span.booking__cost-descr= costdescr
                a.booking__info(href="#" title=""+info)
            span.booking__cost-count= costcount
        .booking__wrapper.booking__wrapper--calc
            span.booking__upsale-descr= upsaledescr
                a.booking__info(href="#" title=""+info)
            span.booking__upsale-count= upsalecount
        .booking__wrapper.booking__wrapper--sum
            h2 Итого
            h2.booking__fullprice= fullprice
        +submit("забронировать", "", "")

mixin searchroom(arrivalday, leaveday, guests, styles)
    section(class="searchroom "+styles)
        h1.searchroom__header Найдём номера под ваши пожелания
        .searchroom__wrapper
            +date-dropdown("прибытие", arrivalday, "dropdown--closed")
            +date-dropdown("выезд", leaveday, "dropdown--closed")
        +dropdown("dropdown--closed searchroom__guests", guests)
        +submit("подобрать номер", "", "")

mixin signup(action, styles)
    section(class="signup "+styles)
        h1.signup__header Регистрация аккаунта
        form(action=""+action )
            +text-field("name", "Имя", "signup__name")
            +text-field("name", "Фамилия", "signup__surname")
            +radio("", "Мужчина", "sign", "sign1", "male")
            +radio("", "Женщина", "sign", "sign2", "female")
            h3.signup__subheader дата рождения
            +text-field("name", "ДД.ММ.ГГГГ", "text-field--masked")
            h3.signup__subheader данные для входа в сервис
            +text-field("name", "Email", "signup__email")
            +text-field("name", "Пароль", "signup__password")
            +toggle("", "Получать спецпредложения", "name", "spam", "value")
            +submit("перейти к оплате", "signup__submit", "")
            .signup__wrapper
                span Уже есть аккаунт на Toxin
                +btn("войти", "btn-empty")

