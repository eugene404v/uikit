mixin logo(href, title, src, styles)
    a(class="logo "+styles, href=""+href, title=""+title)
        img(src=""+src, alt="logo")

mixin header(links, logged, styles, userlink, username)
    header(class="header "+styles)
        .header__wrapper
            +logo("href", "title", "", "styles")
            nav.header__nav
                - for (let i=0; i<links.length; i++)
                    a(class="header__link "+links[i].styles, href=""+links[i].href, title=""+links[i].value)= links[i].value
                if logged === "true"
                    +btn("войти", "btn-empty btn--login")
                    +btn("зарегистрироваться", "btn-fill btn--signup")
                else
                    a.header__user(href=""+userlink, title=""+username)= username

mixin footercolumn(links)
    ul
        - for (let i=0; i<links.length; i++)
            li
                a(class="footer__link", href=""+links[i].href, title=""+links[i].value)= links[i].value

                
mixin socials()
    ul.socials
        li
            a.socials__link.socials__link--twitter(href="#", target="_blank", title="twitter")
        li
            a.socials__link.socials__link--fb(href="#", target="_blank", title="facebook")
        li
            a.socials__link.socials__link--inst(href="#", target="_blank", title="instagram")                

mixin footer(footerNav, footerAbout, footerSupport, styles)
    footer(class="footer "+styles)
        .footer__wrapper.footer__wrapper--paddings
            .footer__column.footer__column--wide
                +logo("href", "title", "", "footer__logo")
                p Lorem ipsum dolor sit amet consectetur adipiscing elit aliquam eget nullam pellentesque aliquam curabitur cociis.
            .footer__column
                h3.footer__title navigation
                +footercolumn(footerNav)
            .footer__column
                h3.footer__title about us
                +footercolumn(footerAbout)
            .footer__column
                h3.footer__title support
                +footercolumn(footerSupport)
            .footer__column.footer__column--wide
                h3.footer__title Subscribe to our newsletter
                p.footer__text Receive our latest news and promotions in your inbox!
                +subscribe("footer__subscribe", "Your email address", "name", "action")
        .footer__bottom
            .footer__wrapper
                p Copyright © 2018 Toxin отель. Все права зачищены.
                +socials()

mixin copyright(styles)
    footer(class="copyright "+styles)
        +logo("href", "title", "", "alt", "styles")
        p.copyright__text Copyright © 2018 Toxin отель. Все права зачищены.
        +socials()


