include pug/mixins.pug

<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Form elements
        link(rel="stylesheet", href="main.scss")
    body
        main.ui-kit
            section.forms
                .forms__inputs
                    +form-element("text-field", "default")
                        +text-field("name", "Email", "")
                    +form-element("text-field", "hover/focus")
                        +text-field("name", "This is pretty awesome", "text-field--active")
                    +form-element("dropdown", "")
                        +dropdown("", "Сколько гостей")
                    //-MASKED INPUT***************************************
                    .forms__date-wrapper
                        +date-dropdown("date dropdown", "ДД.ММ.ГГГГ", "")
                        +date-dropdown("date dropdown", "19.08.2019 ", "")
                    //-FILTER DATE***************************************
                    +form-element("subscription text field", "")
                        +subscribe("", "Email", "name", "action")
                .forms__checks
                    +form-element("checkbox buttons", "")
                        +checkbox("", "1", "check1", "value")
                            span Можно курить
                        +checkbox("", "1", "check2", "value")
                            span Можно с питомцами 
                        +checkbox("", "1", "check3", "value")
                            span Можно пригласить гостей (до 10 человек)
                    +form-element("radio buttons", "")
                        +radio("", "male", "2", "maler", "value")
                        +radio("", "female", "2", "female", "value")
                    +form-element("toggle", "")
                        +toggle("", "male", "2", "male", "value")
                        +toggle("", "male", "2", "mal", "value")
                    +form-element("like button", "")
                        +like("2", "")
                        +like("12", "like--active")
                    +form-element("rate button", "")
                        //-STARS RATING***************************************
                .forms__btns
                    +form-element("range slider", "1111")
                        //-SLIDER***************************************
                    +form-element("buttons", "")
                        +btn("click me", "btn--fill btn--fill_active")
                        +btn("click me", "btn--fill")
                        br
                        +btn("click me", "btn--empty btn--empty_active")
                        +btn("click me", "btn--empty")
                        br
                        +btn("click me", "btn--text btn--text_active")
                        +btn("click me", "btn--text")
                        br
                        +submit("перейти к оплате", "btn--submit", "", "#")
                    +form-element("pagination", "")
                        +pagination
                .forms__drop1
                    +form-element("dropdown", "default")
                        +dropdown("dropdown--closed", "2 спальни, 2 кровати...")
                    +form-element("dropdown", "expanded")
                        +dropdown("", "2 спальни, 2 кровати...")
                            ul.dropdown__list    
                                +dropdown__item("спальни", "2")
                                +dropdown__item("спальни", "2")
                                +dropdown__item("спальни", "0", "dropdown__counter--empty")
                .forms__drop2
                    +form-element("dropdown", "")
                        +dropdown("", "Сколько гостей")
                            ul.dropdown__list    
                                +dropdown__item("взрослые", "0", "dropdown__counter--empty")
                                +dropdown__item("дети", "0", "dropdown__counter--empty")
                                +dropdown__item("младенцы", "0", "dropdown__counter--empty")
                            button.dropdown__submit применить
                .forms__drop3
                    +form-element("dropdown", "")
                        +dropdown("", "3 гостя")
                            ul.dropdown__list    
                                +dropdown__item("взрослые", "2")
                                +dropdown__item("дети", "1")
                                +dropdown__item("младенцы", "0", "dropdown__counter--empty")
                            button.dropdown__reset очистить
                            button.dropdown__submit применить
                .forms__expandable
                    +expandable("expandable checkbox list", "expandable--closed")
                    +expandable("expandable checkbox list")
                        +checkbox("", "1", "check31", "value")
                            span Завтрак
                        +checkbox("", "1", "check32", "value")
                            span Письменный стол 
                        +checkbox("", "1", "check33", "value")
                            span Стул для кормления
                        +checkbox("", "1", "check34", "value")
                            span Кроватка
                        +checkbox("", "1", "check35", "value")
                            span Телевизор 
                        +checkbox("", "1", "check36", "value")
                            span Шампунь
                .forms__checklist
                    +form-element("rich checklist", "")
                        +checkbox("", "1", "check11", "value")
                            h4.checkbox__header Широкий коридор
                            p Ширина коридоров в номере не менее 91 см.
                        +checkbox("", "1", "check12", "value")
                            h4 Помощник для инвалидов
                            p На 1 этаже вас встретит специалист и проводит до номера.
                .forms__bulletlist
                    +form-element("bullet list", "")
                        +bulletlist
                            +bulletlist__item("Нельзя с питомцами")
                            +bulletlist__item("Без вечеринок и мероприятий")
                            +bulletlist__item("Время прибытия — после 13:00, а выезд до 12:00")
                .forms__features
                    +feature("Комфорт", "Шумопоглощающие стены", "feature--comfort")
                    +feature("Удобство", "Окно в каждой из спален", "feature--window")
                .forms__comment
                    +comments("#", "Мурад Сарафанов", "", "5 days", "12", "like--active")

                

        script(src='./main.js')